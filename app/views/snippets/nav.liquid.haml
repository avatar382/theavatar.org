%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: "{% path_to home %}"} {{ &nbsp; }}
    #navbar.navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-center
        {% capture site_logo %}{% editable_file "photo" %}/tmp/tmp.jpg{% endeditable_file %}{% endcapture %}

        %li
          %a{ href: "{% path_to home %}"} 
            %img(src="{{site_logo | resize: '20x' }}")

        {% for page_in_nav in site.pages %}
        {% if page_in_nav.depth == 1 %}
        %li{class: "{% if page.fullpath == page_in_nav.fullpath %}active{% endif %}" }
          {% link_to page_in_nav %}
        {% endif %}
        {% endfor %}
